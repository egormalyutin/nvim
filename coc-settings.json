{
  "languageserver": {
      "golang": {
        "command": "gopls",
        "rootPatterns": ["go.mod"],
        "filetypes": ["go"]
      },
      "clangd": {
        "command": "clangd",
        "args": ["--background-index"],
        "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
        "filetypes": ["c", "cpp", "objc", "objcpp"]
      },
      "lua": {
        "command": "lua-lsp",
        "filetypes": ["lua"]
      }
  }
}
